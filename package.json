{
  "private": true,
  "name": "serveside",
  "version": "0.1.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changelog": "lerna-changelog",
    "build": "lerna run build --parallel",
    "lint": "lerna run lint --parallel",
    "test": "cross-env FORCE_COLOR=true jest",
    "docs": "jsdoc -c ./jsdoc.json -r",
    "commit": "cz",
    "prepare": "husky install",
    "version": "lerna version --conventional-commits",
    "preversion:ci": "npm run bootstrap",
    "version:ci": "npm run versionup -- --yes --no-commit-hooks",
    "versionup": "npm run version -- --no-git-tag-version",
    "versionup:prerelease": "npm run versionup -- prerelease",
    "versionup:patch": "npm run versionup -- patch",
    "versionup:minor": "npm run versionup -- minor",
    "versionup:major": "npm run versionup -- major",
    "postversionup": "npm run commit-version",
    "commit-version": "HUSKY=0 git add . && git commit --no-verify -m \"chore(*): publish `node -p 'require(\"./lerna.json\").version'`\"",
    "predeploy": "npm run build",
    "deploy": "lerna publish",
    "release": "npm run deploy -- from-package --create-release github",
    "release:ci": "npm run release -- --yes",
    "release:canary": "npm run deploy -- --canary --preid next --force-publish",
    "release:canary:ci": "npm run release:canary -- --yes"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serveside/serveside.git"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "lerna": "^8.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-transform-destructuring": "^7.14.7",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/config-lerna-scopes": "^18.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^29.0.0",
    "babel-plugin-nodejs-import-images": "^1.0.0",
    "commitizen": "^4.2.4",
    "core-js": "^3.16.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "docdash": "^1.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsdoc": "^46.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-vue": "^9.0.0",
    "express": "^4.17.1",
    "graphql": "^16.4.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "jsdoc": "^3.6.7",
    "lerna-changelog": "^2.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^3.0.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-is": "^18.1.0",
    "svelte": "^3.42.1",
    "vue": "^3.2.33",
    "vue-server-renderer": "^2.6.14"
  }
}
